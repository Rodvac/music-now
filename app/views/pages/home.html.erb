<div class="home-background-image">
  <img src="#" alt="Homepage image">
</div>

<div class="home-window d-flex flex-wrap">
  <div class="title-studios-near-me">
    <h1>A GREAT PLACE TO PLAY</h1>
  </div>
  <div class="button-studio-near-me">
    <%#= simple_form_for :location, url: studios_path, method: :get do |f| %>
    <%#= f.input :longitude, input_html: {id: "longitude", class: "d-none"}, label:false%>
    <%#= f.input :latitude, input_html: {id: "latitude", class: "d-none"}, label:false %>
    <%#= f.input :radius, as: :range, input_html: {value: 5, class: "d-none"}, label:false %>
    <%#= f.submit "STUDIOS NEAR ME", class: "btn btn-primary btn-homepage" %>
    <%# end %>
    <%= link_to "STUDIOS NEAR ME", studios_path, class: "btn btn-primary btn-homepage", id: "near-me-btn" %>
  </div>
</div>

<div class="search-container">
  <h1>Trouver un studio</h1>

  <%= simple_form_for :search, url: rooms_path, method: :get  do |f|%>
    <div class="search-container-items">
      <%= f.input :address, collection: Studio.all.map{|s| s.address}, placeholder: 'OÃ¹ souhaitez-vous jouer ?'%>
      <%= f.input :capacity, placeholder: 'Ajoutez des artistes', as: :integer%>
      <%#= f.submit "Rechercher", class: 'btn btn-primary', wrapper_html: { class: 'fas fa-search' } %>
      <%= f.button :submit, { class: 'btn-primary' } do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>





