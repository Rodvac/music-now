<div class="home-background-image" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://media.baggpipe.com/2017/11/BPS6171.jpg)">
</div>


<div class="home-window d-flex">
  <div class="title-studios-near-me">
    <h1>RESERVEZ UN STUDIO PRES <br>DE CHEZ VOUS</h1>
  </div>
  <div class="button-studio-near-me">
    <%#= simple_form_for :location, url: studios_path, method: :get do |f| %>
    <%#= f.input :longitude, input_html: {id: "longitude", class: "d-none"}, label:false%>
    <%#= f.input :latitude, input_html: {id: "latitude", class: "d-none"}, label:false %>
    <%#= f.input :radius, as: :range, input_html: {value: 5, class: "d-none"}, label:false %>
    <%#= f.submit "STUDIOS NEAR ME", class: "btn btn-primary btn-homepage" %>
    <%# end %>
    <%= link_to "Découvrir les studios à proximité", studios_path, class: "btn btn-primary btn-homepage", id: "near-me-btn" %>
  </div>
</div>
<br>
<br>
<br>
<br>

<div class="home-description">
  <h1>VOTRE SESSION MUSIQUE EN QUELQUES CLICS </h1>
  <div class="etapes d-flex">
    <div class="search etape">
      <i class="fas fa-search"></i>
      <p>Trouvez un studio</p>
    </div>
    <div class="calendar etape">
      <i class="far fa-calendar-plus"></i>
      <p>Vérifiez les disponibilités</p>
    </div>
    <div class="book etape">
      <i class="fas fa-check"></i>
      <p>Réservez en ligne</p>
    </div>
  </div>
</div>

<div class="search-container">
  <h1>Trouver une salle</h1>

  <%= simple_form_for :search, url: rooms_path, method: :get  do |f|%>
    <div class="search-container-items">
      <%= f.input :address, label: "Adresse", placeholder: 'Où souhaitez-vous jouer ?', required: false %>
      <%= f.input :capacity, label: "Artistes", placeholder: 'Ajoutez des artistes', as: :integer, required: false %>
      <%= f.input :item, label: "Instrument", collection: Item.all.map{|s| s.name}, class: "recognitionStyling", prompt: "-- SELECTIONNER --", required: false %>
      <%= f.submit "Rechercher", class: 'btn btn-primary' %>
    </div>
<% end %>
