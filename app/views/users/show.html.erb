                            <td class="col-2"><%=  booking.time %></td>
                            <td class="col-2"><%=  booking.user.first_name %></td>
                            <td class="col-3"><%=  booking.room.name %></td>
                            <th scope="col" class="col-2"><%= link_to booking.messages.count, booking_path(booking)%></th>
